{
  "name": "vscode-focus-color-toggle",
  "displayName": "Focus Color Toggle",
  "publisher": "local",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:focusColorToggle.toggle"
  ],
  "scripts": {
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.2",
    "chai": "^4.3.7"
  },
  "contributes": {
    "commands": [
      {
        "command": "focusColorToggle.toggle",
        "title": "Focus Color Toggle: Apply Now"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "Focus Color Toggle",
      "properties": {
        "focusColorToggle.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the focus color toggle extension."
        },
        "focusColorToggle.toggleTitleBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle title bar colors on focus changes."
        },
        "focusColorToggle.toggleActivityBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle activity bar colors on focus changes."
        },
        "focusColorToggle.toggleStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle status bar colors on focus changes."
        }
      }
    }
  }
}
