{
  "name": "rivershade",
  "displayName": "RiverShade â€” Focus Color Toggle",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/BurtHarris/purple.git"
  },
  "version": "0.1.10",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./extension.js",
  "scripts": {
    "test": "node ./test/runTest.js",
    "lint": "eslint \"test/**/*.js\" \"extension.js\" --ext .js",
    "bump-patch": "npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.1",
    "chai": "^4.3.7",
    "eslint": "^8.48.0",
    "mocha": "^11.7.2"
  },
  "activationEvents": [
    "onCommand:focusColorToggle.toggle",
    "onCommand:rivershade.toggle",
    "onCommand:rivershade.installBling",
    "onCommand:rivershade.removeBling",
    "onCommand:rivershade.diagnose",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "focusColorToggle.toggle",
        "title": "Focus Color Toggle: Apply Now"
      },
      {
        "command": "rivershade.toggle",
        "title": "RiverShade: Apply Focus Colors"
      },
      {
        "command": "rivershade.installBling",
        "title": "RiverShade: Install Bling"
      },
      {
        "command": "rivershade.removeBling",
        "title": "RiverShade: Remove Bling"
      },
      {
        "command": "rivershade.diagnose",
        "title": "RiverShade: Diagnose"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Focus Color Toggle",
      "properties": {
        "focusColorToggle.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the focus color toggle extension."
        },
        "riverShade.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable RiverShade (alias for focusColorToggle.enabled)."
        },
        "focusColorToggle.toggleTitleBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle title bar colors on focus changes."
        },
        "riverShade.toggleTitleBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle title bar colors on focus changes (alias)."
        },
        "focusColorToggle.toggleActivityBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle activity bar colors on focus changes."
        },
        "riverShade.toggleActivityBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle activity bar colors on focus changes (alias)."
        },
        "focusColorToggle.toggleStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle status bar colors on focus changes."
        },
        "riverShade.toggleStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Toggle status bar colors on focus changes (alias)."
        },
        "focusColorToggle.updateTarget": {
          "type": "string",
          "enum": [
            "global",
            "workspace",
            "both"
          ],
          "default": "global",
          "description": "Where to write workbench.colorCustomizations: 'global' (User), 'workspace', or 'both'."
        },
        "focusColorToggle.colorScheme": {
          "type": "string",
          "default": "default",
          "description": "Select the color scheme for focus color toggle. 'default' uses the built-in colors."
        },
        "riverShade.colorScheme": {
          "type": "string",
          "default": "default",
          "description": "Select the color scheme for RiverShade. 'default' uses the built-in colors."
        },
        "focusColorToggle.reloadWindowOnChange": {
          "type": "boolean",
          "default": false,
          "description": "Reload the VS Code window automatically after color changes to force UI refresh."
        },
        "riverShade.reloadWindowOnChange": {
          "type": "boolean",
          "default": false,
          "description": "Reload the VS Code window automatically after color changes to force UI refresh."
        },
        "riverShade.updateTarget": {
          "type": "string",
          "enum": [
            "global",
            "workspace",
            "both"
          ],
          "default": "global",
          "description": "Where to write workbench.colorCustomizations (alias for focusColorToggle.updateTarget)."
        }
      }
    }
  }
}
