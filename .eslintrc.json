{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": { "mocha": true }
    }
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"]
  }
}
