{
    "chat.agent.maxRequests": 250,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "workbench.editor.closeOnFileDelete": true,
    // Use the custom title bar so inactive/active title bar colors are applied on Windows
    "window.titleBarStyle": "custom",
    "workbench.colorCustomizations": {

        "foreground": "#ffffff",
        
      
        "sideBar.border": "#99459c",
        "scrollbar.slider": "#222222",
        "activityBar.border": "#99459c",
        "editorGroup.border": "#99459c",    
        "panel.border": "#99459c",
        "tab.border": "#99459c",
        "titleBar.border": "#99459c",
        "tab.selectedBackground": "#9e82b6",
        "tab.inactiveForeground"   : "#aaaaaa",
        "tab.activeForeground":"default",
        "breadcrumb.background": "#000000",
        "breadcrumb.focusForeground": "#ffffff",

    // Active (focused window) colors - match status bar background for consistency
    "titleBar.activeBackground": "#49124b",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.activeBorder": "#99459c",
    "activityBar.background": "#49124b",
    "activityBar.foreground": "#ffffff",
  
    // Inactive (unfocused window) colors - dark background + light grey foreground
    "titleBar.inactiveBackground": "#0f0f0f",
    "titleBar.inactiveForeground": "#e6e6e6",
    "activityBar.inactiveBackground": "#0f0f0f",
    "activityBar.inactiveForeground": "#e6e6e6",



    // Status bar colors - make active match titleBar and inactive match titleBar inactive
    "statusBar.background": "#49124b",
    "statusBar.foreground": "#ffffff",
    // Unfocused variants (noFolder/background variants not all supported on every platform,
    // but setting these keeps the visual consistent where supported)
    "statusBar.noFolderBackground": "#0f0f0f",
    "statusBar.noFolderForeground": "#e6e6e6",
    "statusBar.debuggingBackground": "#0f0f0f",
    "statusBar.debuggingForeground": "#e6e6e6"
    
    },
    "chat.tools.terminal.autoApprove": {
        "npm test": {
            "approve": true,
            "matchCommandLine": true
        },
        "npm view": true,
        "git rev-parse": true
    }
}